<div class="col-md-3"></div>
<div class="col-md-6">
            <!-- general form elements disabled -->
            <div class="box box-warning">
              <div class="box-header">
                <h3 class="box-title">Product type information</h3>
              </div><!-- /.box-header -->
              <div class="box-body">
                <form role="form"  onsubmit = "return validateFormEdit()" action="/Classify/update/{{Classify._id}}" method="POST">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Classify name</label>
                    <input id="name" name="name" value="{{Classify.name}}" type="text" class="form-control"/>
                     <p id="aEditName" style="color: red; margin-left:15%;"></p>
                  </div>
                  <div class="form-group">
                    <label>Count</label>
                    <input id="count" name="count" type="number" value="{{Classify.count}}" class="form-control" placeholder="Enter ..."/>
                      <p id="aEditCount" style="color: red; margin-left:15%;"></p>
                    <div class="form-group">
                        <label>Product</label>
                        <input id="product" name="product" type="text" value="{{Classify.product}}" class="form-control" placeholder="Enter ..."/>
                        <p id="aEditProduct" style="color: red; margin-left:15%;"></p>
                      </div>
                       <div class="form-group">
                        <label>Date</label>
                        <input id="date" name="date" type="date" value="{{formatDate1 Classify.date}}" class="form-control" placeholder="Enter ..."/>
                        <p id="aEditDate" style="color: red; margin-left:15%;"></p>
                      </div>
                      <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Edit Classify</button>
                      </div>
                  </div>
                </form>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div>
          <div class="col-md-3"></div>
          <script>

function validateFormEdit()  {
             var n = document.getElementById("name").value;
             var c = document.getElementById("count").value;
              var numC = Number(c);
              var p = document.getElementById("product").value;
              var d=document.getElementById('date').value;
              var date=new Date(d)
                var today = new Date()
                today.setHours(0,0,0,0,)

               var aN=document.getElementById("aEditName");
               var aC=document.getElementById("aEditCount");
               var aP=document.getElementById("aEditProduct");
               var aD=document.getElementById("aEditDate");
 
             if(n== "" || n.trim().length >20) {
                aN.innerHTML="Please enter Classify Name"
                 return false;
                 
             }else{aN.innerHTML=""}
             if(numC <1 || numC > 50) {
                  aC.innerHTML="Please enter Classify Count"
                 return false;
             }else{aC.innerHTML=""}
                if(p== "" || p.trim().length >50) {
                  aP.innerHTML="Please enter Product Name"
                 return false;
             }else{aP.innerHTML=""}
             if(!d || date > today){
                aD.innerHTML="Please enter Classify Date"
                return false;
             }else{aD.innerHTML=""}
             return true;
         }

          </script>