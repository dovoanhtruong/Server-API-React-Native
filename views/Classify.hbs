    <script>
 function validateForm()  {
             var n = document.getElementById("name").value;
             var c = document.getElementById("count").value;
              var numC = Number(c);
              var p = document.getElementById("product").value;
              var d=document.getElementById('date').value;
              var date=new Date(d)
                var today = new Date()
                today.setHours(0,0,0,0,)

               var aN=document.getElementById("aName");
               var aC=document.getElementById("aCount");
               var aP=document.getElementById("aProduct");
               var aD=document.getElementById("aDate");
 
             if(n== "" || n.trim().length >20) {
                aN.innerHTML="Please enter Classify Name"
                 return false;
                 
             }else{aN.innerHTML=""}
             if(numC <1 || numC > 50) {
                  aC.innerHTML="Please enter Classify Count"
                 return false;
             }else{aC.innerHTML=""}
                if(p== "" || p.trim().length >50) {
                  aP.innerHTML="Please enter Product Name"
                 return false;
             }else{aP.innerHTML=""}
             if(!d || date > today){
                aD.innerHTML="Please enter Classify Date"
                return false;
             }else{aD.innerHTML=""}
             return true;
         }

